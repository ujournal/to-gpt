{
  "name": "Send to GPT",
  "version": "1.0.0",
  "description": "Send link to GPT with Prompt",
  "manifest_version": 3,
  "author": "Maslakov Oleksandr",
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Settings"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab", "contextMenus"],
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
